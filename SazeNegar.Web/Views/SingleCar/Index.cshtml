<!-- Content
================================================== -->
<div class="container">
    <div class="row margin-bottom-50">
        <div class="col-md-12">

            <!-- Slider -->
            <div class="property-slider default">
                @foreach (var item in Model.Galleries)
                {
                    if (item.CarsId == Model.Cars.Id && item.Type == "Top")
                    {
                        <a href="../../Files/GalleryImages/Image/@item.Image" data-background-image="../../Files/GalleryImages/@item.Image" class="item mfp-gallery"></a>
                    }
                }
                @*<a href="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop2" data-background-image="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop2" class="item mfp-gallery"></a>
