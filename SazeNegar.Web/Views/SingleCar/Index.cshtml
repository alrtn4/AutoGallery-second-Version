                    <a href="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop4" data-background-image="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop4" class="item mfp-gallery"></a>
                    <a href="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop5" data-background-image="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop5" class="item mfp-gallery"></a>
                    <a href="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop6" data-background-image="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageTop6" class="item mfp-gallery"></a>*@
            </div>

            <!-- Slider Thumbs -->
            <div class="property-slider-nav">
                @foreach (var item in Model.Galleries)
                {
                    if (item.CarsId == Model.Cars.Id && item.Type == "Bottom")
                    {
                        <div class="item"><img src="../../Files/GalleryImages/@item.Image" alt=""></div>
                    }
                }
                @*<div class="item"><img src="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageNav2" alt=""></div>
                    <div class="item"><img src="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageNav3" alt=""></div>
                    <div class="item"><img src="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageNav4" alt=""></div>
                    <div class="item"><img src="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageNav5" alt=""></div>
                    <div class="item"><img src="../../Files/CarsInfoImages/Image/@Model.Cars.CarsInfo.ImageNav6" alt=""></div>*@
            </div>

        </div>
    </div>
</div>


<div class="container">
    <div class="row">

        <!-- Property Description -->
        <div class="col-lg-8 col-md-7 sp-content">
            <div class="property-description">

                <!-- Main Features -->
                <ul class="property-main-features">
                    <li>دنده <span>@Model.Cars.Gear</span></li>
                    <li>درها <span>@Model.Cars.CarsInfo.Doors</span></li>
                    <li>ترمز <span>@Model.Cars.CarsInfo.Break</span></li>
                    <li>نویگشین <span>@Model.Cars.Navigation</span></li>
                </ul>


                <!-- Description -->
                <h3 class="desc-headline">توضیحات</h3>
                <div class="show-more">
                    @Model.Cars.CarsInfo.Explanation

                    <a href="#" class="show-more-button">بیشتر <i class="fa fa-angle-down"></i></a>
                </div>

                <!-- Details -->
                <h3 class="desc-headline">جزئیات</h3>
                <ul class="property-features margin-top-0">
                    <li>سانروف: <span>@Model.Cars.CarsInfo.DetailsSunroof</span></li>
                    <li>تنظیم ارتفاع نور: <span>@Model.Cars.CarsInfo.DetailsHeight</span></li>
                    <li>تنظیم برقی آینه راننده: <span>@Model.Cars.CarsInfo.DetailsMirror</span></li>
                    <li>سنسور فاصله عقب: <span>@Model.Cars.CarsInfo.DetailsSencor</span></li>
                    <li>خروجی برق 12 ولت: <span>@Model.Cars.CarsInfo.DetailsElectricity</span></li>
                    <li>چراغ نقشه خوانی: <span>@Model.Cars.CarsInfo.DetailsMap</span></li>
                    <li>keyless: <span>@Model.Cars.CarsInfo.DetailsKeyless</span></li>
                    <li>چراغ راهنمای آینه: <span>@Model.Cars.CarsInfo.DetailsGuide</span></li>
                </ul>


                <!-- Features -->
                <h3 class="desc-headline">ویژگی ها</h3>
                <ul class="property-features checkboxes margin-top-0">
                    <li>@Model.Cars.CarsInfo.FeaturesComputer</li>
                    <li>@Model.Cars.CarsInfo.FeaturesRightKey</li>
                    <li>@Model.Cars.CarsInfo.FeaturesLeftKey</li>
                    <li>@Model.Cars.CarsInfo.FeaturesTempreture</li>
                    <li>@Model.Cars.CarsInfo.FeaturesCruse</li>
                    <li>@Model.Cars.CarsInfo.FeaturesJack</li>
                    <li>@Model.Cars.CarsInfo.FeaturesCurtain</li>
                    <li>@Model.Cars.CarsInfo.FeaturesHeater</li>
                </ul>


                <!-- Floorplans -->
                <h3 class="desc-headline no-border">مشخصات فنی </h3>
                <!-- Accordion -->
                <div class="style-1 fp-accordion">
                    <div class="accordion">

                        <h3>سیستم موتر <span>@Model.Cars.CarsInfo.TechnicalEngineShort</span> <i class="fa fa-angle-down"></i> </h3>
                        <div>

                            <p>
                                @Model.Cars.CarsInfo.TechnicalEngineDetails
                            </p>
                        </div>

                        <h3>سیستم ترمز <span>@Model.Cars.CarsInfo.TechnicalBreakShort</span> <i class="fa fa-angle-down"></i></h3>
                        <div>

                            <p>
                                @Model.Cars.CarsInfo.TechnicalBreakDetails
                            </p>

                        </div>

                        <h3>سیستم تهویه <span>@Model.Cars.CarsInfo.TechnicalVentilationShort</span> <i class="fa fa-angle-down"></i></h3>
                        <div>
                            <p>
                                @Model.Cars.CarsInfo.TechnicalVentilationDetails
                            </p>
                        </div>

                    </div>
                </div>





