@model SazeNegar.Core.Models.Project
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div class="page-content bg-white">
    <!-- Page Heading Box ==== -->
    <div class="page-banner ovbl-dark overlay-dotted ovdt1 parallax"
         style="background-image:url(~/Content/client/images/banner/banner1.jpg);">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">جزئیات پروژه</h1>
                <div class="breadcrumb-row">
                    <ul class="list-inline">
                        <li><a href="index.html"><i class="fa fa-home"></i> خانه </a></li>
                        <li>جزئیات پروژه</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Heading Box END ==== -->
    <!-- Main Slider -->
    <div class="content-block" id="content-area">
        <div class="section-area section-sp2 port-7-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="heading-bx text-left m-b20">
                            <h3 class="title-head m-b0">@Model.Title</h3>
                            <div class="ttr-separator sepimg"></div>
                        </div>
                        <p>
                            @Html.Raw(Model.Description)
                        </p>
                    </div>
                    <div class="col-lg-5">
                        <div class="row sp4 magnific-image sticky-top">
                            @foreach (var item in Model.ProjectGalleries)
                            {
                                <div class="action-card col-lg-6 col-md-6 col-sm-6 col-12 wow fadeInUp" data-wow-delay="0.2s">
                                    <div class="portfolio-box style-2">
                                        <div class="portfolio-media">
                                            <img src="~/Files/ProjectImages/@item.Image" alt="@item.Title">
                                        </div>
                                        <a href="~/Files/ProjectImages/@item.Image" class="magnific-anchor"> مشاهده تصویر </a>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- contact area END -->
</div>
<!-- Content END-->