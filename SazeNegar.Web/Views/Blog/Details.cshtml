@model SazeNegar.Web.ViewModels.ArticleDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Titlebar
        ================================================== -->
<div id="titlebar">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h2>وبلاگ</h2>
                <span>همیشه به روز باشید</span>

                <!-- Breadcrumbs -->
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>وبلاگ</li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>



