================================================== -->
<div class="container">

    <!-- Blog Posts -->
    <div class="blog-page">
        <div class="row">


            <!-- Post Content -->
            <div class="col-md-12">


                <!-- Blog Post -->
                <div class="blog-post single-post">

                    <!-- Img -->
                    <img class="post-img" src="../../Files/ArticleImages/Image/@Model.Image" alt="">


                    <!-- Content -->
                    <div class="post-content">
                        <h3>@Model.Title</h3>

                        <ul class="post-meta">
                            <li>@Model.PersianDate</li>
                            <li>@Model.ArticleComments.Count دیدگاه</li>
                        </ul>

                        @Html.Raw(@Model.Description)


                        <!-- Share Buttons -->
                        <ul class="share-buttons margin-top-40 margin-bottom-0">
                            <li><a class="fb-share" href="https://@ViewBag.Facebook"> <i class="fa fa-facebook"></i>فیسبوک </a></li>
                            <li>
                                <a class="instagram-share" href="https://@ViewBag.Instagram">
                                    <i class="fa fa-instagram"></i>اینستاگرام
                                </a>
                            </li>
                            <li><a class="twitter-share" href="https://@ViewBag.Twitter"> <i class="fa fa-twitter"></i>توییتر </a></li>
                        </ul>
                        <div class="clearfix"></div>

                    </div>
                </div>
