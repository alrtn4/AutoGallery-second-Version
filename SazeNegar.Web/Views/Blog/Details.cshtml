                <div class="margin-top-50"></div>

                <!-- Reviews -->
                <section class="comments">
                    <h4 class="headline margin-bottom-35">
                        دیدگاه ها <span class="comments-amount">(@Model.ArticleComments.Count)</span>
                    </h4>

                    <ul>
                        @foreach (var item in Model.ArticleComments)
                        {
                            <li>
                                <div class="avatar">
                                    <img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&amp;s=70"
                                         alt="" />
                                </div>
                                <div class="comment-content">
                                    <div class="arrow-comment"></div>
                                    <div class="comment-by">
