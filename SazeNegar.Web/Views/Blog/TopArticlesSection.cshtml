@model List<SazeNegar.Web.ViewModels.TopArticlesViewModel>

<div class="widget recent-posts-entry">
    <h6 class="widget-title">پست های اخیر</h6>
    <div class="widget-post-bx">
    @foreach (var item in Model)
    {
        <div class="widget-post clearfix">
            <div class="ttr-post-media">
                <img src="/Files/ArticleImages/Image/@item.Image" width="200"
                     height="143" alt="">
            </div>
            <div class="ttr-post-info">
                <div class="ttr-post-header">
                    <h6 class="post-title">
                        <a href="/Blog/Details/@item.Id">
                            @item.Title
                        </a>
                    </h6>
                </div>
                <ul class="media-post">
                    <li><a href="javascript:;">@item.PersianDate</a></li>
                </ul>
            </div>
        </div>
    }
    </div>
</div>