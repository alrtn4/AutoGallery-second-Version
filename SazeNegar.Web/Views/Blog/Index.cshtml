                                        </li>
                                        <li>
                                            <div><a href="javascript:;"><img src="~/Content/client/images/gallery/pic6.jpg" alt=""></a></div>
                                        </li>
                                    </ul>
                                </div>*@
                            @Html.Action("ArticleTags", "Blog")
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact area END -->
</div>
