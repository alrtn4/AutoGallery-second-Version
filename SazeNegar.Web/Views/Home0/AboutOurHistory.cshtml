@using SazeNegar.Core.Models
@model List<SazeNegar.Core.Models.Service>
<div class="section-area section-sp1 bg-primary"
     style="background-image:url(/Content/client/images/background/bg1.png); background-position:bottom; background-size:100%;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-bx text-white text-center">
                    <h6 class="title-ext m-b0">تاریخچه سازه نگار</h6>
                    <h2 class="title-head m-b0">درباره تاریخچه ما بدانید</h2>
                    <div class="ttr-separator sepimg2"></div>
                </div>
            </div>
        </div>
        <div class="history-box">
            <ul class="nav nav-tabs">
                @{
                    int a = 0;
                    foreach (var category in ViewBag.Categories)
                    {
                        <li><a data-toggle="tab" href="#tabs-@(category.Id)" class="@(a == 0? "active show" : null)">@category.Title</a></li>
                        a++;
                    }
                }
            </ul>

            <div class="tab-content text-white">
                @{
                    int i = 0;
                    foreach (var service in Model)
                    {

                        <div id="tabs-@(service.ServiceCategoryId)" class="tab-pane @(i == 0? "active" : null)">
                            <div class="row align-items-center">
                                <div class="col-xl-5 col-lg-6">
                                    <img src="~/Files/ServiceImages/Image/@service.Image" alt="">
                                </div>
                                <div class="col-xl-7 col-lg-6">
                                    <div class="history-info">
                                        <h3>@service.Title</h3>
                                        <p>
                                            @Html.Raw(service.Description)
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        i++;
                    }
                }
            </div>
        </div>
    </div>
</div>
