@model SazeNegar.Web.ViewModels.ContactUsViewModel

<div class="contact-sidebar content-scroll">
    <div class="inner">
        <div class="logo">
            <img src="~/Content/client/images/logo.png" alt="">
        </div>
        <h4 class="title">ارتباط با ما برای گرفتن اطلاعاتی</h4>
        <ul class="contact-infolist">
            <li>
                <img src="~/Content/client/images/icon/contact/icon1.png" alt="" />
                <h6 class="contact-title">شماره تماس</h6>
                <p>@Model.Phone.ShortDescription</p>
            </li>
            <li>
                <img src="~/Content/client/images/icon/contact/icon2.png" alt="" />
                <h6 class="contact-title">آدرس ایمیل</h6>
                <a href="javascript:;">@Model.Email.ShortDescription</a>
            </li>
            <li>
                <img src="~/Content/client/images/icon/contact/icon3.png" alt="" />
                <h6 class="contact-title">آدرس</h6>
                <p>@Model.Address.ShortDescription</p>
            </li>
        </ul>
        <h4 class="title">با ما در تماس باشید</h4>
        <form class="contact-bx ajax-form" action="contact.php">
            <div class="ajax-message"></div>
            <div class="row placeani">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="input-group">
                            <label>نام شما</label>
                            <input name="name" type="text" required class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="input-group">
                            <label>آدرس ایمیل</label>
                            <input name="ایمیل" type="email" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="input-group">
                            <label>تایپ پیام</label>
                            <textarea name="message" rows="4" class="form-control" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div>
                        <div class="input-group">
                            <div class="g-recaptcha" data-sitekey="6Lf2gYwUAAAAAJLxwnZTvpJqbYFWqVyzE-8BWhVe"
                                 data-callback="verifyRecaptchaCallback" data-expired-callback="expiredRecaptchaCallback"></div>
                            <input class="form-control d-none" style="display:none;" data-recaptcha="true" required
                                   data-error="کپچا را پر کنید">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button name="submit" type="submit" value="Submit" class="btn button-md"> ارسال پیام</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="contact-sidebtn close">
    <i class="ti-close"></i>
</div>