@model List<SazeNegar.Web.ViewModels.ArticleListViewModel>

<div class="section-area section-sp1 bg-gray"
     style="background-image:url(~/Content/client/images/background/bg2.png); background-position:bottom; background-size:100%;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-bx text-center">
                    <h6 class="title-ext m-b0">بلاگ و اخبار</h6>
                    <h2 class="title-head m-b0"> بلاگ</h2>
                    <div class="ttr-separator sepimg"></div>
                </div>
            </div>
        </div>
        <div class="blog-carousel owl-carousel owl-loaded owl-drag">
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="recent-news bg-white">
                        <div class="action-box">
                            <a href="javascript:;"><img src="/Files/ArticleImages/Thumb/@item.Image" alt=""></a>
                        </div>
                        <div class="info-bx p-a30">
                            <ul class="media-post">
                                <li class="date"><a href="javascript:;"><i class="fa fa-calendar-o"></i>@item.PersianDate</a></li>
                            </ul>
                            <h4 class="post-title"><a href="blog.html">@item.Title</a></h4>
                            <p>
                               @item.ShortDescription
                            </p>
                            <div class="post-extra">
                                <a href="/Blog/Details/@item.Id" class="btn-link black radius-xl">بیشتر بخوانید</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
