<div class="container">

    <div class="row">

        <div class="col-md-12">
            <h3 class="headline margin-bottom-25 margin-top-65">تازه ها</h3>
        </div>

        <!-- Carousel -->
        <div class="col-md-12">
            <div class="carousel">
                @{
                    foreach (var item in Model)
                    {

                        <!-- Listing Item -->
                        <div class="carousel-item">
                            <div class="listing-item">
                                
                                <a href="/cars/detail/@item.Id" class="listing-img-container">

                                    <div class="listing-badges">
                                        <span class="featured">@item.Special</span>
                                        <span>@item.Tag</span>
                                    </div>

                                    <div class="listing-img-content">
                                        <span class="listing-price">@item.Cars.Price تومان </span>

                                    </div>

                                    <div>
                                        <img src="~/Files/CarsImages/image/@item.Cars.Image" alt="">
                                    </div>

                                </a>

                                <div class="listing-content">

                                    <div class="listing-title">
                                        <h4>
                                            <a href="@item.Link">@item.Cars.Brand.Brand</a>
                                        </h4>

                                    </div>

                                    <ul class="listing-features">
                                        <li>دنده <span>@item.Cars.Gear</span></li>
                                        <li>سانروف <span>@item.Cars.Sunroof</span></li>
                                        <li>نویگیشن <span>@item.Cars.Navigation</span></li>
                                    </ul>

                                    <div class="listing-footer">

                                        <span><i class="fa fa-calendar-o"></i> @item.Date</span>
                                        <div class="clearfix"></div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- Listing Item / End -->
                    }
                }

            </div>
        </div>
        <!-- Carousel / End -->

    </div>
</div>
