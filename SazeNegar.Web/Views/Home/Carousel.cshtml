@model List<SazeNegar.Web.ViewModels.CarouselViewModel>

<div class="container">

    <div class="row">

        <div class="col-md-12">
            <h3 class="headline margin-bottom-25 margin-top-65">تازه ها</h3>
        </div>

        <!-- Carousel -->
        <div class="col-md-12">
            <div class="carousel">
                @{
                    foreach (var item in Model)
                    {

                        <!-- Listing Item -->
                        <div class="carousel-item">
                            <div class="listing-item">
                                
                                <a href="/SingleCar/Index/@item.Cart.Cars.Id" class="listing-img-container">

                                    <div class="listing-badges">
                                        <span class="featured">@item.Cart.Cars.Special</span>
                                        @*<span>@item.Cars.Tag</span>*@
                                    </div>

                                    <div class="listing-img-content">
                                        <span class="listing-price">@item.Cart.Cars.Price تومان </span>

                                    </div>

                                    <div>
                                        <img src="~/Files/CarsImages/image/@item.Cart.Cars.Image" alt="" style="height: 230px">
                                    </div>

                                </a>

                                <div class="listing-content">

                                    <div class="listing-title">
                                        <h4>
                                            <a href="/SingleCars/Index/@item.Cart.Cars.Id">@item.Cart.Cars.Brand.Brand</a>
                                        </h4>

                                    </div>

                                    <ul class="listing-features" style="height: 101px">
                                        @if (!String.IsNullOrEmpty(item.Cart.Cars.Gear))
                                        {
                                            <li>دنده <span>@item.Cart.Cars.Gear</span></li>
                                        }
                                        @if (!String.IsNullOrEmpty(item.Cart.Cars.Sunroof))
                                        {
                                            <li>سانروف <span>@item.Cart.Cars.Sunroof</span></li>
                                        }
                                        @if (!String.IsNullOrEmpty(item.Cart.Cars.Navigation))
                                        {
                                            <li>نویگیشن <span>@item.Cart.Cars.Navigation</span></li>
                                        }
                                    </ul>

                                    <div class="listing-footer">

                                        <span><i class="fa fa-calendar-o"></i> @item.PersianAddedDate</span>
                                        <div class="clearfix"></div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- Listing Item / End -->
                    }
                }

            </div>
        </div>
        <!-- Carousel / End -->

    </div>
</div>
