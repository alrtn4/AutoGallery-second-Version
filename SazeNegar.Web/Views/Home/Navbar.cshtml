@model SazeNegar.Web.ViewModels.ContactUsViewModel

<!-- Header Container
        ================================================== -->
<header id="header-container">

    <!-- Topbar -->
    <div id="top-bar">
        <div class="container">

            <!-- Left Side Content -->
            <div class="left-side">

                <!-- Top bar -->
                <ul class="top-bar-menu">
                    <li><i class="fa fa-phone"></i> @Model.Phone.ShortDescription</li>
                    <li><i class="fa fa-envelope"></i> <a href="mailto: https://@Model.Email.ShortDescription">@Model.Email.ShortDescription</a></li>

                </ul>

            </div>
            <!-- Left Side Content / End -->
            <!-- Left Side Content -->
            <div class="right-side">

                <!-- Social Icons -->
                <ul class="social-icons">
                    <li><a class="facebook" href="https://@Model.Facebook.ShortDescription"><i class="icon-facebook"></i></a></li>
                    <li><a class="instagram" href="https://@Model.Instagram.ShortDescription"><i class="icon-instagram"></i></a></li>
                    <li><a class="twitter" href="https://@Model.Twitter.ShortDescription"><i class="icon-twitter"></i></a></li>
                </ul>

            </div>
            <!-- Left Side Content / End -->

        </div>
    </div>
    <div class="clearfix"></div>
    <!-- Topbar / End -->
    <!-- Header -->
    <div id="header">
        <div class="container">

            <!-- Left Side Content -->
            <div>

                <!-- Logo -->
                <div id="logo">
                    <a href="index.html"><img src="~/Content/AutoGallery/images/logo.png" alt=""></a>
                </div>


                <!-- Mobile Navigation -->
                <div class="mmenu-trigger">
                    <button class="hamburger hamburger--collapse" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>


                <!-- Main Navigation -->
                <nav id="navigation" class="style-1">
                    <ul id="responsive">

                        <li>
                            <a href="/Home/Index">صفحه اصلی</a>

                        </li>

                        <li>
                            <a href="/Cars/Index">خودرو ها</a>

                        </li>

                        <li>
                            <a href="/Blog/Index">مقالات</a>

                        </li>

                        <li>
                            <a href="/Home/About_us">درباره ما</a>

                        </li>

                        <li>
                            <a href="/Home/Contact">تماس با ما</a>

                        </li>

                    </ul>
                </nav>

                <!-- <ul>
                    <li>tel: +123456789</li>
                </ul> -->
                <div class="clearfix"></div>
                <!-- Main Navigation / End -->

            </div>

        </div>
    </div>
    <!-- Header / End -->

</header>
<div class="clearfix"></div>
<!-- Header Container / End -->
